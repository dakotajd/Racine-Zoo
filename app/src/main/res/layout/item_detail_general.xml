<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_background"
    android:stateListAnimator="@drawable/item_selected"
    >

    <include layout="@layout/item_header"/>
    
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:autoLink="phone|email|web"
        android:text="The Great Cat Canyon is an area with multiple big cat species. Notable species are the lion, tiger, and lynx.The animals reside in enviroments that feel native to their homelands, and feature savvana and jungle like enviroments. "/>

    <include layout="@layout/separator"/>


</LinearLayout>